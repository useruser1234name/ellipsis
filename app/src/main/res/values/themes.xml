<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base ellipsis Theme -->
    <style name="Base.Theme.Ellipsis" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/ellipsis_primary</item>
        <item name="colorPrimaryVariant">@color/ellipsis_secondary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/ellipsis_secondary</item>
        <item name="colorSecondaryVariant">@color/ellipsis_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Window properties -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Ellipsis.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Ellipsis.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Ellipsis.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Ellipsis.Body2</item>
    </style>

    <!-- Main ellipsis Theme -->
    <style name="Theme.Ellipsis" parent="Base.Theme.Ellipsis" />

    <!-- Typography Styles -->
    <style name="TextAppearance.Ellipsis.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontWeight" tools:targetApi="28">300</item>
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="TextAppearance.Ellipsis.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontWeight" tools:targetApi="28">300</item>
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextAppearance.Ellipsis.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontWeight" tools:targetApi="28">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="TextAppearance.Ellipsis.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontWeight" tools:targetApi="28">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.Ellipsis.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.Ellipsis.Button</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="TextAppearance.Ellipsis.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight" tools:targetApi="28">500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.Ellipsis.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Loading Animation Style -->
    <style name="Widget.Ellipsis.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="android:indeterminateTint">@color/ellipsis_primary</item>
        <item name="indicatorSize">32dp</item>
        <item name="trackThickness">2dp</item>
    </style>

</resources>